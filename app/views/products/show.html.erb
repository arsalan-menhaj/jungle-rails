<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
    <h3>Average User Rating: <%= @average_rating %> out of 5</h3>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

  </article>

  <br>

  <section class="new-review">
    <%= form_for :review, url: '/products/' + params[:id] + '/reviews' do |f| %>
      <p>
        Tell us your thoughts! <%= f.text_field :description %>
      </p>
      <p>
        Please provide a rating (out of 5): <%= f.text_field :rating %>
      </p>
      <input type="hidden" name="review[product_id]" value="<%= params[:id] %>">
      <%= f.submit "Submit" %>
    <% end %>
  </section>


  <header class="reviews-header">
    <h2>
      Reviews
    </h2>
  </header>

  <br>

  <div class="row product-reviews">
    <div class="col-sm-8">
      <%= render @product.reviews %>
    </div>
  </div>

  <%= console %>

</section>
